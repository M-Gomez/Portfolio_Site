pipeline {
    agent {node {label 'portfolio-agent'}}

    stages {
        stage('Build') {
            steps {
                sh 'apt install npm'
                sh 'npm install --force'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm start'
            }
        }
    }
}
