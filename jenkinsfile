pipeline {
    agent {node {label 'portfolio-agent'}}

    stages {
        stage('Build') {
            steps {
                sh 'yes | sudo apt install --force-yes --fix-missing npm'
                sh 'npm install --force'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm start -- --port 9091'
            }
        }
    }
}
